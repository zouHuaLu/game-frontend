{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rimraf dist && npm run build-ts && npm run lint && cd ../client && npm run build && cd ../admin && npm run build",
    "build-ts": "tsc",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tsc --noEmit && eslint --fix \"src/**/*.{js,ts}\"",
    "serve": "node --experimental-specifier-resolution=node dist/server.js",
    "serve-debug": "nodemon --inspect --experimental-specifier-resolution=node dist/server.js",
    "start": "npm run serve",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon --experimental-specifier-resolution=node dist/server.js",
    "watch-ts": "tsc -w"
  },
  "devDependencies": {
    "@types/connect-history-api-fallback": "^1.3.5",
    "@types/koa__router": "^8.0.11",
    "@types/koa-bodyparser": "^4.3.6",
    "@types/koa-send": "^4.1.3",
    "@types/node": "^16.11.26",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@koa/router": "^10.1.1",
    "connect-history-api-fallback": "^1.6.0",
    "dotenv": "^16.0.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-compose": "^4.1.0",
    "koa-connect": "^2.1.0",
    "koa-send": "^5.0.1",
    "mongodb": "^4.4.1"
  }
}
